<%- include('../layouts/main'); %>

    <div id="mostrar-alert"></div>

    <div class="container">
        <h1>Combinaciones</h1>

        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <button id="btnNuevo" type="button" class="btn btn-success" data-toggle="modal">Nuevo</button>
                </div>
            </div>
        </div>
        <br>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive">
                        <table id="tablaPersonas" class="table table-striped table-bordered table-condensed"
                            style="width:100%">
                            <thead class="text-center">
                                <tr>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Marca</th>
                                    <th>precio de venta</th>
                                    <th>Foto</th>
                                    <th>Tiempo valido</th>
                                    <th>Tipo de tiempo</th>
                                    <th>Productos</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                <% combination.forEach((dato)=> { %>
                                    <tr>
                                        <td>
                                            <%= dato.id %>
                                        </td>
                                        <td>
                                            <%= dato.name %>
                                        </td>
                                        <td>
                                            <%= dato.band %>
                                        </td>
                                        <td>
                                            <%= dato.sale_price %>
                                        </td>
                                        <td>
                                            <img src="/<%= dato.photo %>" width="50px" height="50px">
                                        </td>
                                        <td>
                                            <%= dato.quantity_time_validated %>
                                        </td>
                                        <td>
                                            <%= dato.type_date %>
                                        </td>
                                        <td><div class='text-center'><a class='btn btn-primary' href="/admin/products-combination/<%= dato.id %>">Ingredientes</a></div></td>
                                        <td></td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!--Modal para CRUD-->
        <div class="modal fade" id="modalCRUD" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel"></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form id="formPersonas">
                        <div class="modal-body">
                            <input type="hidden" value="" class="form-control" name="id" id="id">
                            <div class="d-flex justify-content-around">
                                <div class="form-group">
                                    <label for="name" class="col-form-label">Nombre:</label>
                                    <input type="text" name="name" id="name" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="band" class="col-form-label">Marca:</label>
                                    <input type="text" class="form-control" name="band" id="band">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="sale_price" class="col-form-label">Preciode venta:</label>
                                <input type="number" class="form-control" name="sale_price" id="sale_price">
                            </div>
                            <div class="form-group">
                                <label for="photo" class="col-form-label">Foto del producto:</label>
                                <input type="file" class="form-control" name="photo" id="photo">
                            </div>
                            <div class="d-flex justify-content-around">
                                <div class="form-group" style="width: 45%;">
                                    <label for="quantity_time_validated" class="col-form-label">Tiempo valido:</label>
                                    <input type="number" class="form-control" name="quantity_time_validated" id="quantity_time_validated">
                                </div>
                                <div class="form-group" style="width: 45%;">
                                    <label for="type_date" class="col-form-label">Tipo de tiempo:</label>
                                    <select name="type_date" id="type_date" class="form-control">
                                        <option value="semana">Semana</option>
                                        <option value="mes">Mes</option>
                                    </select>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-light" data-dismiss="modal">Cancelar</button>
                                <button type="submit" id="btnGuardar" class="btn btn-dark">Guardar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../layouts/footer'); %>

        <script type="text/javascript" src="/js/ABM/generalJquery.js"></script>
        <script type="text/javascript" src="/js/ABM/combinationsJquery.js"></script>
        </body>

        </html>