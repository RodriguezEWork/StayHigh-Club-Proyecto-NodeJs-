<%- include('../layouts/main'); %>

    <div id="mostrar-alert"></div>

    <div class="container">
        <h1>Cajas</h1>
    
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <button id="btnNuevo" type="button" class="btn btn-success" data-toggle="modal">Nuevo</button>
                </div>
            </div>
        </div>
        <br>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive">
                        <table id="tablaPersonas" class="table table-striped table-bordered table-condensed" style="width:100%">
                            <thead class="text-center">
                                <tr>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Tipo</th>
                                    <th>Plata Inicial</th>
                                    <th>Plata</th>
                                    <th>Usuario</th>
                                    <th>Productos</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                <% cashboxes.forEach((dato) => { %>
                                    <tr>
                                        <td><%= dato.id %></td>
                                        <td><%= dato.name %></td>
                                        <td><%= dato.type %></td>
                                        <td><%= dato.initial_money  %></td>
                                        <td><%= dato.money  %></td>
                                        <td><%= dato.User.name %></td>
                                        <td><div class='text-center'><a class='btn btn-primary' href="/admin/products-cashbox/<%= dato.id %>">Productos</a></div></td>
                                        <td></td>
                                        <input type="hidden" name="useruse-<%= dato.id %>" id="useruse-<%= dato.id %>" value="<%= dato.User.id %>">
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    
        <!--Modal para CRUD-->
        <div class="modal fade" id="modalCRUD" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel"></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form id="formPersonas">
                        <div class="modal-body">
                            <input type="hidden" value="" class="form-control" name="id" id="id">
                            <div class="d-flex justify-content-around">
                                <div class="form-group" style="width: 45%;">
                                    <label for="name" class="col-form-label">Nombre:</label>
                                    <input type="text" class="form-control" name="name" id="name">
                                </div>
                                <div class="form-group" style="width: 45%;">
                                    <label for="type" class="col-form-label">Tipo:</label>
                                    <select name="type" id="type" class="form-control">
                                        <option value="Entrada">Entrada</option>
                                        <option value="Venta">Venta</option>
                                    </select>
                                </div>
                            </div>
                            <div class="d-flex justify-content-around">
                                <div class="form-group">
                                    <label for="initial_money" class="col-form-label">Plata Inicial:</label>
                                    <input type="number" class="form-control" name="initial_money" id="initial_money">
                                </div>
                                <div class="form-group">
                                    <label for="money" class="col-form-label">Plata:</label>
                                    <input type="number" class="form-control" name="money" id="money">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="UserId" class="col-form-label">Usuario:</label>
                                <select name="UserId" id="UserId" class="form-control">
                                    <% users.forEach((dato) => { %>
                                        <option value="<%= dato.id %>"><%= dato.name %></option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-light" data-dismiss="modal">Cancelar</button>
                            <button type="submit" id="btnGuardar" class="btn btn-dark">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../layouts/footer'); %>

    <script type="text/javascript" src="/js/ABM/generalJquery.js"></script>
    <script type="text/javascript" src="/js/ABM/cashboxJquery.js"></script>  
</body>
</html>